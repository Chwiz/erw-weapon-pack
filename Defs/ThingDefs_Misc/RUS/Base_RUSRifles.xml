    <!-- AKM -->
  
    <ThingDef ParentName="ERW_Rifle">
    <defName>ERW_Gun_AKM_Rifle</defName>
    <label>AKM</label>
    <description>The AKM is an assault rifle designed by Soviet small arms designer Mikhail Kalashnikov in 1959. It is the most ubiquitous rifle of the Kalashnikov rifles. It was developed as replacement to AK introduced a decade prior.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Rifle/AKM</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ERW_Weapons_RUSRifles</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
	
	    <equippedAngleOffset>40</equippedAngleOffset>	
	
    <statBases>
      <WorkToMake>35000</WorkToMake>
      <Mass>3.8</Mass>
      <AccuracyTouch>0.42</AccuracyTouch>
      <AccuracyShort>0.59</AccuracyShort>
      <AccuracyMedium>0.51</AccuracyMedium>
      <AccuracyLong>0.36</AccuracyLong>
      <RangedWeapon_Cooldown>1.76</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>75</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ERW_Bullet_762x39_Rifle</defaultProjectile>
        <warmupTime>1.50</warmupTime>
        <range>27.9</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>ERW_Shot_AKM</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
		<weaponTags>
			<li>IndustrialGunAdvanced</li>
			<li>ERW_M4A1_MilSpec</li>
		</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

