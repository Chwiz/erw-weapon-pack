    <!-- PB -->

    <ThingDef ParentName="ERW_Pistol">
    <defName>ERW_Gun_PB_Pistol</defName>
    <label>PB</label>
    <description>The PB (GRAU index 6P9) is a Soviet integrally suppressed semi-automatic pistol developed and manufactured by the Izhevsk Mechanical Plant, based on the Makarov pistol chambered in 9x18 Makarov.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Pistol/PB</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ERW_Weapons_RUSPistols</researchPrerequisite>
      <skillRequirements>
        <Crafting>3</Crafting>
      </skillRequirements>
    </recipeMaker>
	
	  <equippedAngleOffset>40</equippedAngleOffset>	
	
    <statBases>
      <WorkToMake>6000</WorkToMake>
      <Mass>1</Mass>
      <AccuracyTouch>0.87</AccuracyTouch>
      <AccuracyShort>0.61</AccuracyShort>
      <AccuracyMedium>0.30</AccuracyMedium>
      <AccuracyLong>0.23</AccuracyLong>
      <RangedWeapon_Cooldown>0.70</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>35</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ERW_Bullet_9x18_Pistol</defaultProjectile>
        <warmupTime>0.43</warmupTime>
        <range>19.9</range>
        <burstShotCount>1</burstShotCount>
        <ticksBetweenBurstShots>0</ticksBetweenBurstShots>
        <soundCast>ERW_Shot_PB</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
		<weaponTags>
			<li>IndustrialGunAdvanced</li>
			<li>ERW_M4A1_MilSpec</li>
		</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

