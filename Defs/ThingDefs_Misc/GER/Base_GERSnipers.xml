<Defs>

    <!-- G22A2 -->
  
    <ThingDef ParentName="ERW_Sniper">
    <defName>ERW_Gun_G22A2_Sniper</defName>
    <label>G22A2</label>
    <description>Desc</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Sniper/DVL_10</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ERW_Weapons_GERSniper</researchPrerequisite>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
	
	    <equippedAngleOffset>40</equippedAngleOffset>	
	
    <statBases>
      <WorkToMake>43000</WorkToMake>
      <Mass>7.4</Mass>
      <AccuracyTouch>0.20</AccuracyTouch>
      <AccuracyShort>0.53</AccuracyShort>
      <AccuracyMedium>0.82</AccuracyMedium>
      <AccuracyLong>0.87</AccuracyLong>
      <RangedWeapon_Cooldown>2.50</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>90</Steel>
      <ComponentIndustrial>10</ComponentIndustrial>
    </costList>
    <equippedStatOffsets>
      <MoveSpeed>-0.12</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ERW_Bullet_300_WM_Rifle</defaultProjectile>
        <warmupTime>3.33</warmupTime>
        <range>43.9</range>
        <burstShotCount>1</burstShotCount>
        <ticksBetweenBurstShots>0</ticksBetweenBurstShots>
        <soundCast>ERW_Shot_DVL_10</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
		<weaponTags>
			<li>SniperRifle</li>
			<li>ERW_M4A1_MilSpec</li>
		</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    </ThingDef>

