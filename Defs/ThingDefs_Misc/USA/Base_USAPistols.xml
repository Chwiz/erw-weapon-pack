<Defs>

    <!-- M45A1 -->

    <ThingDef ParentName="ERW_Pistol">
    <defName>ERW_Gun_M45A1_Pistol</defName>
    <label>M45A1</label>
    <description>The M4 carbine is a 5.56×45mm NATO, air-cooled, gas-operated,[b] magazine-fed, carbine, assault rifle developed in the United States during the 1980s. It is a shortened version of the M16A2 assault rifle.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Pistol/M45A1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ERW_Weapons_USAPistols</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
	
	  <equippedAngleOffset>40</equippedAngleOffset>	
	
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.88</AccuracyTouch>
      <AccuracyShort>0.60</AccuracyShort>
      <AccuracyMedium>0.28</AccuracyMedium>
      <AccuracyLong>0.15</AccuracyLong>
      <RangedWeapon_Cooldown>0.75</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>7</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ERW_Bullet_45ACP_Pistol</defaultProjectile>
        <warmupTime>0.41</warmupTime>
        <range>19.9</range>
        <burstShotCount>1</burstShotCount>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>ERW_Shot_M45A1</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
		<weaponTags>
			<li>IndustrialGunAdvanced</li>
			<li>ERW_M4A1_MilSpec</li>
		</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

