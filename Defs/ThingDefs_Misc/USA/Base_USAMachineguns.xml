<Defs>

    <!-- M27_IAR -->
  
    <ThingDef ParentName="ERW_Machinegun">
    <defName>ERW_Gun_M27_IAR_Machinegun</defName>
    <label>M27 IAR</label>
    <description>The M27 Infantry Automatic Rifle (IAR) is a 5.56mm select-fire assault rifle, based on the HK416 by Heckler n' Koch. It is used by the United States Marine Corps and is intended to enhance an automatic rifleman's maneuverability.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Machinegun/M27_IAR</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ERW_Weapons_USAMachineguns</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
	
	<equippedAngleOffset>40</equippedAngleOffset>	
	
    <statBases>
      <WorkToMake>39300</WorkToMake>
      <Mass>4.4</Mass>
      <AccuracyTouch>0.41</AccuracyTouch>
      <AccuracyShort>0.49</AccuracyShort>
      <AccuracyMedium>0.36</AccuracyMedium>
      <AccuracyLong>0.27</AccuracyLong>
      <RangedWeapon_Cooldown>1.80</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>75</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList><equippedStatOffsets>
      <MoveSpeed>-0.10</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ERW_Bullet_556x45_IAR_Rifle</defaultProjectile>
        <warmupTime>1.50</warmupTime>
        <range>27.9</range>
        <burstShotCount>5</burstShotCount>
        <ticksBetweenBurstShots>9</ticksBetweenBurstShots>
        <soundCast>ERW_Shot_M27_IAR</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
		<weaponTags>
			<li>IndustrialGunAdvanced</li>
			<li>ERW_M4A1_Silenced_MilSpec</li>
		</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

