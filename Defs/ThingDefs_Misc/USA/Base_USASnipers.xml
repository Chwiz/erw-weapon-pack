<Defs>

    <!-- M24 -->

    <ThingDef ParentName="ERW_Sniper">
    <defName>ERW_Gun_M24_Sniper</defName>
    <label>M24</label>
    <description>The M24 is the military and police version of the Remington Model 700 rifle, M24 being the model name assigned by the United States Army after adoption as their standard sniper rifle in 1988.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/Sniper/M24</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>ERW_Weapons_USASniper</researchPrerequisite>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
    </recipeMaker>
	
	    <equippedAngleOffset>40</equippedAngleOffset>	
	
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>7.2</Mass>
      <AccuracyTouch>0.22</AccuracyTouch>
      <AccuracyShort>0.52</AccuracyShort>
      <AccuracyMedium>0.79</AccuracyMedium>
      <AccuracyLong>0.85</AccuracyLong>
      <RangedWeapon_Cooldown>2.18</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>85</Steel>
      <ComponentIndustrial>9</ComponentIndustrial>
    </costList>
    <equippedStatOffsets>
      <MoveSpeed>-0.10</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ERW_Bullet_762x51_Bolt_Rifle</defaultProjectile>
        <warmupTime>3.26</warmupTime>
        <range>42.9</range>
        <burstShotCount>1</burstShotCount>
        <ticksBetweenBurstShots>0</ticksBetweenBurstShots>
        <soundCast>ERW_Shot_M24</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
		<weaponTags>
			<li>SniperRifle</li>
			<li>ERW_M4A1_MilSpec</li>
		</weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>

