				/Defs/ThingDef[
				defName = "ERW_Gun_M4A1_Rifle" or
				defName = "ERW_Gun_Mk_17_Mod_0_Rifle" or
				defName = "ERW_Gun_M14_Rifle" or
				defName = "ERW_Gun_SIG_Sauer_MCX_Rifle"
				]/tools
				</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>stock</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>8</power>
							<cooldownTime>1.55</cooldownTime>
							<chanceFactor>1.5</chanceFactor>
							<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
