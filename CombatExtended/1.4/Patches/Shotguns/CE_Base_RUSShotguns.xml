				defName = "ERW_Gun_MP_133_Shotgun" or
				defName = "ERW_Gun_MP_153_Shotgun" or
				defName = "ERW_Gun_TOZ_34_Shotgun" or
				defName = "ERW_Gun_KS_23_Shotgun"
				]/tools
				</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>stock</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>8</power>
							<cooldownTime>1.55</cooldownTime>
							<chanceFactor>1.5</chanceFactor>
							<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
